; ConnectServer Configuration File
; Copy this file to ConnectServer.ini and modify as needed

[ConnectServerInfo]
; TCP port for client connections
ConnectServerPortTCP=44405

; UDP port for inter-server communication (GameServer/JoinServer heartbeats)
ConnectServerPortUDP=55557

; Maximum connections per IP address (0 = unlimited)
MaxIpConnection=5

[Log]
; Enable file logging (1 = enabled, 0 = disabled)
LOG=1

[Console]
; Hide console window on startup (Windows only, 1 = hidden, 0 = visible)
HideConsole=0

; Enable protocol logging
EnableGeneralOutput=1
EnableTCPRecvOutput=1
EnableTCPSendOutput=1
